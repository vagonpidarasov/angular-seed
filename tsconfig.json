{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "lib": [
            "es2015",
            "dom"
        ],
        "allowJs": true,
        "moduleResolution": "node",
        "types": [
            "node",
            "webpack",
            "core-js",
            "jasmine",
            "rx"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noEmitHelpers": true,
        "jsx": "react",
        "baseUrl": "./"
    },
    "exclude": [
        "node_modules",
        "./src/**/*.spec.ts"
    ]
}
