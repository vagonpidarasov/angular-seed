{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "types": ["node", "webpack", "core-js", "rx"],
        "typeRoots": ["node_modules/@types"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noEmitHelpers": true,
        "baseUrl": "./",
    },

    "exclude": [
        "node_modules",
        "./src/**/*.spec.ts"
    ],

    "awesomeTypescriptLoaderOptions": {
        "resolveGlobs": true,
        "forkChecker": true
    },
    "compileOnSave": false,
    "buildOnSave": false
}
