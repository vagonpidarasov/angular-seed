{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es6",
        "module": "es2015",
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "types": ["node", "webpack", "core-js", "rx", "jest", "hammerjs"],
        "typeRoots": ["node_modules/@types"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "esModuleInterop": true
    },

    "exclude": [
        "node_modules"
    ],

    "awesomeTypescriptLoaderOptions": {
        "resolveGlobs": true,
        "forkChecker": true
    },

    "angularCompilerOptions": {
        "enableIvy": true
    },

    "compileOnSave": false,
    "buildOnSave": false
}
